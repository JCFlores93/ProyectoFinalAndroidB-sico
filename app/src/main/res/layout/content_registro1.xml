<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_registro1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.cibertec.android.pharmamedic.Registro1Activity"
    tools:showIn="@layout/activity_registro1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <TextView
            android:text="REGISTRO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColorLink="?attr/colorAccent"
            tools:textColorLink="@color/colorPrimaryDark"
            android:textColor="@android:color/background_dark"
            android:layout_weight="0.05"
            android:paddingTop="8dp"
            android:paddingLeft="130dp"
            android:allowUndo="false" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgbtnVisa"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgbutMaster"
                android:layout_weight="1" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtNumeroDeTarjeta"
            android:text="NÚMERO DE TARJETA DE CRÉDITO O DÉBITO"
            android:layout_marginBottom="30dp" />

        <RadioButton
            android:text="EFECTIVO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rbtnEfectivo"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"

            />

        <Button
            android:text="CREAR CUENTA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrearCuenta"
            android:layout_marginTop="30dp"
            android:layout_weight="0.28" />
    </LinearLayout>
</RelativeLayout>
