<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_productos2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.cibertec.android.pharmamedic.Productos2Activity"
    tools:showIn="@layout/activity_productos2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="?attr/actionModeCloseDrawable"
                android:id="@+id/imgBtnRegresar"
                android:layout_weight="0.65" />

            <TextView
                android:text="Confirmar Pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11"
                android:layout_weight="1"
                android:paddingLeft="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/carrito1"
                android:id="@+id/imageView"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Productos"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView12" />

            <TextView
                android:text="Cantidad"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:text="Monto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="0.27" />

        </LinearLayout>

        <TextView
            android:text="TextView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="348dp"
            android:id="@+id/textView15" />

        <Button
            android:text="Confirmar Pedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfirmar" />

    </LinearLayout>
</RelativeLayout>
